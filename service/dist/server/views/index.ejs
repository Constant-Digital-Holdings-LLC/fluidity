<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <link rel="stylesheet" href="/css/normalize.css" />
        <link href="/css/fontawesome.css" rel="stylesheet" />
        <link href="/css/solid.css" rel="stylesheet" />
        <link rel="stylesheet" href="/css/fluidity.css" />

        <!-- camelCaseToDashDelim(pair[0]) - inverse of how HTML dataset props are converted -->
        <meta name="configData" id="configData" <% Object.entries(configData).forEach(pair => { %> data-<%=
        camelCaseToDashDelim(pair[0]) %>="<%= pair[1] %>" <% }) %> />

        
        <% if(configData.nodeEnv === 'development'){ %>
            <title>
                <%=configData.appName%> Dev
            </title>
        <% } else{ %>
            <title>
                <%=configData.org%> Dash
            </title>
        <% } %>

        <!--Modules-->
        <script async src="/external/modules/es-module-shims/dist/es-module-shims.js"></script>
        <script type="importmap">
            {
                "imports": {
                    "#@shared/": "/shared/"
                }
            }
        </script>
        <script async src="/external/modules/stacktrace.js-2.0.0/dist/stacktrace.js"></script>

        <script type="module" src="/index.js"></script>
        <!--/Modules-->
    </head>
    <body>
        <div id="container-main" class="container">
            <div id="container-logo-and-spinner" class="container bg-gradient cell">
                <a href="#" onclick="window.location.reload(true);"><img src="img/logo.svg" id="logo" /></a>

                <span id="loader"></span>
                
            </div>
            <div id="cell-sites" class="cell bg-gradient">
                

                <ul class="fa-ul" id="site-filter-list">
                </ul>
            </div>
            <div id="container-mesgs" class="container">
                <div id="cell-collectors-and-stats" class="cell bg-gradient">
                    <div id="cell-collectors">
                        <ul class="fa-ul" id="collector-filter-list">
                        </ul>
                    </div>
                    <div id="cell-stats">
                        <div class="stat-name">Filters:</div>
                        <div class="stat-data" id="filter-count">0</div>
                        <div class="stat-name">Storing:</div>
                        <div class="stat-data" id="visibile-count">0</div>
                    </div>
                </div>
                <div id="cell-data" class="cell bg-gradient">
                    <div id="history-data"></div>
                    <div id="current-data" class="scroll-padding-bottom"></div>
                    <div id="end-data"></div>
                </div>
            </div>
        </div>

        
    </body>
</html>
